<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/categories">

    <fragment
        android:id="@+id/categories"
        android:label=""
        android:name="com.my.projects.quizapp.presentation.ui.fragments.CategoriesFragment">
        <action
            android:id="@+id/action_categories_to_quizSetting"
            app:destination="@id/quizSetting"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_categories_to_quizzesDB"
            app:destination="@id/history"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/quizSetting"
        android:name="com.my.projects.quizapp.presentation.ui.fragments.QuizSettingFragment"
        android:label="Quiz Setting" >
        <action
            android:id="@+id/action_quizSetting_to_quiz"
            app:destination="@id/quiz"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/quiz"
        android:name="com.my.projects.quizapp.presentation.ui.fragments.QuizFragment"
        android:label="Quiz" >
        <action
            android:id="@+id/action_quiz_to_score"
            app:destination="@id/score"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/score"
        android:name="com.my.projects.quizapp.presentation.ui.fragments.ScoreFragment"
        android:label="Score"
        tools:layout="@layout/fragment_score" >
        <action
            android:id="@+id/action_score_to_categories"
            app:destination="@id/categories"
            app:popUpTo="@id/categories"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_score_to_quizDB"
            app:destination="@id/history"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/history"
        android:name="com.my.projects.quizapp.presentation.ui.fragments.HistoryFragment"
        android:label="History" >
        <action
            android:id="@+id/action_history_to_quizDetail"
            app:destination="@id/quizDetail"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>

    <action android:id="@+id/action_global_history"
        app:destination="@id/history"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"/>
    <fragment
        android:id="@+id/quizDetail"
        android:name="com.my.projects.quizapp.presentation.ui.fragments.QuizDetailFragment"
        tools:layout="@layout/fragment_quiz_detail" >

    </fragment>
</navigation>