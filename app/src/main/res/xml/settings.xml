<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="quiz_countdowntimer"
        app:title="Quiz">


        <EditTextPreference
            app:defaultValue="10"
            app:key="KEY_NUMBER_OF_QUESTIONS"
            app:title="Number Of Questions (Default)"
            app:useSimpleSummaryProvider="false" />

        <EditTextPreference
            app:defaultValue="60"
            app:key="KEY_COUNT_DOWN_TIMER_PERIOD"
            app:title="Question CountDown (Default)"
            app:useSimpleSummaryProvider="false" />


    </PreferenceCategory>

    <PreferenceCategory
        app:key="look_and_feel"
        app:title="Look And Feel">

        <SwitchPreference
            app:defaultValue="false"
            app:key="KEY_DARK_MODE"
            app:title="Dark Mode" />

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>