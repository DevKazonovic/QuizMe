<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextAppearance-->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Label" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <!--TextAppearance-->

    <!--Buttons-->
    <style name="Widget.App.DatePickerButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.DatePickerButton</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.DatePickerButton</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Custom</item>
    </style>

    <style name="ShapeAppearance.App.DatePickerButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.Custom" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20dp</item>
    </style>
    T

    <style name="ThemeOverlay.App.DatePickerButton" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <!--Buttons-->

    <!--Inputs-->
    <style name="Widget.App.AutoCompleteTextView" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.AutoCompleteTextView</item>
    </style>

    <style name="ThemeOverlay.App.AutoCompleteTextView" parent="">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="autoCompleteTextViewStyle">
            @style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox
        </item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>


    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="editTextStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>

    </style>
    <!--Inputs-->

    <!--Date Picker-->
    <style name="Widget.App.DatePicker" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="">
        <item name="colorOnPrimary">@color/blue_500</item>
    </style>
    <!--Date Picker-->

    <!--BottomNav-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">

    </style>
    <!--BottomNav-->

    <style name="DialogTheme" parent="Theme.QuizApp">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Margin.ScoreLayout" parent="">
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>